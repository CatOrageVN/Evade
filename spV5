-- üê±üçä MeoCam Hub v5 | Real Speed Bypass
-- E = X3 Speed | Z = NoLag

local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local UIS = game:GetService("UserInputService")

local plr = Players.LocalPlayer
local speedOn = false
local nolagOn = false

local SPEED_MULTI = 3 -- X3 th·∫≠t

-- ==== GUI ====
local gui = Instance.new("ScreenGui", plr.PlayerGui)
gui.Name = "MeoCamHubV3"

local frame = Instance.new("Frame", gui)
frame.Size = UDim2.new(0, 280, 0, 120)
frame.Position = UDim2.new(0.05, 0, 0.35, 0)
frame.BackgroundColor3 = Color3.fromRGB(255,165,0)
frame.Active = true
frame.Draggable = true
frame.BorderSizePixel = 0
Instance.new("UICorner", frame).CornerRadius = UDim.new(0, 18)

local txt = Instance.new("TextLabel", frame)
txt.Size = UDim2.new(1,0,1,0)
txt.BackgroundTransparency = 1
txt.Text = "üê± MeoCam Hub üçä\n[E] X3 Speed : OFF\n[Z] No Lag : OFF"
txt.Font = Enum.Font.GothamBold
txt.TextScaled = true
txt.TextColor3 = Color3.fromRGB(40,40,40)

-- ==== NO LAG ====
local function enableNoLag()
    for _,v in pairs(workspace:GetDescendants()) do
        if v:IsA("BasePart") then
            v.Material = Enum.Material.Plastic
            v.Reflectance = 0
        elseif v:IsA("Decal") or v:IsA("Texture") then
            v:Destroy()
        elseif v:IsA("ParticleEmitter") or v:IsA("Trail") then
            v.Enabled = false
        end
    end
    settings().Rendering.QualityLevel = Enum.QualityLevel.Level01
end

-- ==== REAL SPEED ====
RunService.RenderStepped:Connect(function()
    if not speedOn then return end
    local char = plr.Character
    if not char then return end

    local hrp = char:FindFirstChild("HumanoidRootPart")
    local hum = char:FindFirstChildOfClass("Humanoid")
    if not hrp or not hum then return end

    local moveDir = hum.MoveDirection
    if moveDir.Magnitude > 0 then
        hrp.Velocity = Vector3.new(
            moveDir.X * 16 * SPEED_MULTI,
            hrp.Velocity.Y,
            moveDir.Z * 16 * SPEED_MULTI
        )
    end
end)

-- ==== KEYBINDS ====
UIS.InputBegan:Connect(function(input, gp)
    if gp then return end

    if input.KeyCode == Enum.KeyCode.E then
        speedOn = not speedOn
    end

    if input.KeyCode == Enum.KeyCode.Z then
        nolagOn = not nolagOn
        if nolagOn then
            enableNoLag()
        end
    end

    txt.Text =
        "üê± MeoCam Hub üçä\n[E] X3 Speed : "..(speedOn and "ON" or "OFF")..
        "\n[Z] No Lag : "..(nolagOn and "ON" or "OFF")
end)
