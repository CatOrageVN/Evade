-- Speed x3 | By MeoCamüçä (ANTI LAG)

local player = game.Players.LocalPlayer
local speedOn = false
local normal = 16
local boost = 48 -- x3

local function getHumanoid()
	local char = player.Character or player.CharacterAdded:Wait()
	return char:WaitForChild("Humanoid")
end

-- Nh·∫•n E b·∫≠t/t·∫Øt
game:GetService("UserInputService").InputBegan:Connect(function(i, gpe)
	if gpe then return end
	if i.KeyCode == Enum.KeyCode.E then
		speedOn = not speedOn
		getHumanoid().WalkSpeed = speedOn and boost or normal
	end
end)

-- Gi·ªØ speed khi ch·∫øt (1 l·∫ßn, kh√¥ng loop)
player.CharacterAdded:Connect(function(char)
	char:WaitForChild("Humanoid").WalkSpeed = speedOn and boost or normal
end)
